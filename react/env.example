# Coastal Threat Alert System - Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Development Server Configuration
VITE_PORT=3000

# API Configuration
VITE_API_BASE_URL=https://api.coastalguardian.com/v1
VITE_API_KEY=your_api_key_here

# WebSocket Configuration
VITE_WEBSOCKET_URL=wss://ws.coastalguardian.com

# Real-time Marine Data API Keys
# NOAA Tides & Currents (Free, no API key required)
VITE_NOAA_ENABLED=true

# National Data Buoy Center (Free, no API key required)
VITE_NDBC_ENABLED=true

# USGS Water Quality (Free, no API key required)
VITE_USGS_ENABLED=true

# Stormglass Marine Weather API (Requires API key)
VITE_STORMGLASS_API_KEY=your_stormglass_api_key_here
VITE_STORMGLASS_ENABLED=false

# Marine Traffic API (Requires API key)
VITE_MARINE_TRAFFIC_API_KEY=your_marine_traffic_api_key_here
VITE_MARINE_TRAFFIC_ENABLED=false

# OpenWeatherMap API (Alternative weather data)
VITE_OPENWEATHER_API_KEY=your_openweather_api_key_here
VITE_OPENWEATHER_ENABLED=false

# External Service API Keys
VITE_TWILIO_ACCOUNT_SID=your_twilio_account_sid
VITE_TWILIO_AUTH_TOKEN=your_twilio_auth_token
VITE_TWILIO_PHONE_NUMBER=+1234567890

VITE_SENDGRID_API_KEY=your_sendgrid_api_key
VITE_SENDGRID_FROM_EMAIL=noreply@coastalguardian.com

VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=your_app_id

# Map Configuration
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# AI/ML Service Configuration
VITE_OPENAI_API_KEY=your_openai_api_key
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key

# Database Configuration (if using external database)
VITE_DATABASE_URL=postgresql://username:password@localhost:5432/coastalguardian
VITE_REDIS_URL=redis://localhost:6379

# Monitoring and Analytics
VITE_SENTRY_DSN=your_sentry_dsn
VITE_ANALYTICS_ID=your_analytics_id

# Feature Flags
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_AI_PREDICTIONS=true
VITE_ENABLE_MOBILE_NOTIFICATIONS=true
VITE_ENABLE_WEBHOOK_INTEGRATIONS=true
VITE_ENABLE_REAL_MARINE_DATA=true

# Development Configuration
VITE_DEBUG_MODE=false
VITE_VERBOSE_LOGGING=false

# Real-time Data Refresh Intervals (in milliseconds)
VITE_SENSOR_REFRESH_INTERVAL=60000
VITE_ALERT_REFRESH_INTERVAL=30000
VITE_PREDICTION_REFRESH_INTERVAL=300000
